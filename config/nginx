server {
    listen 80;
    server_name api.zvms.site;

    location / {
        proxy_pass http://127.0.0.1:8000;  # Update with your app's port
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_cache_bypass $http_upgrade;
    }

    error_log /var/log/nginx/zvms.log;
    access_log /var/log/nginx/zvms.log;
}
